<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seciii.oasis.data.paper.KeywordMapper">
    <insert id="insertKeyword" parameterType="com.seciii.oasis.po.Keyword"
            useGeneratedKeys="true" keyProperty="kid">
        insert into keyword(kname, activity, paperamount)
        values(#{kname}, #{activity}, #{paperamount})
    </insert>

    <insert id="insertKidPid" >
        insert into keywordpaper(kid,pid)
        values(#{kid},#{pid})
    </insert>

    <update id="updateKeyword" parameterType="com.seciii.oasis.po.Keyword">
        update keyword set activity=#{activity}, paperamount=#{paperamount}
        where kid=#{kid}
    </update>

    <select id="selectKeywordByKid" resultMap="Keyword">
        select * from keyword where kid = #{kid}
    </select>

    <select id="selectKeywordByKname" resultMap="Keyword">
        select * from keyword where kname like concat('%', #{kname}, '%')
    </select>

    <select id="selectKeywordPOByExactKname" resultMap="Keyword">
        select * from keyword where kname =#{kname}
    </select>

    <select id="selectKeywordByExactKname" resultType="int">
        select kid from keyword where kname=#{kname}
    </select>

    <select id="selectKidByPid" resultType="int">
        select kid from keywordpaper
        where pid=#{pid}
    </select>

    <resultMap id="Keyword" type="com.seciii.oasis.po.Keyword">
        <id column="kid" property="kid"></id>
        <result column="kname" property="kname"></result>
        <result column="activity" property="activity"></result>
        <result column="paperamount" property="paperamount"></result>
    </resultMap>

</mapper>